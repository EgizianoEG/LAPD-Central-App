{
  "name": "lapd-central-bot",
  "version": "0.5.0",
  "description": "A discord.js bot designed to be used as a helper to manage and operate role playing LAPD Discord servers.",
  "author": "EgizianoEG",
  "license": "MIT",
  "main": "Source/Main.ts",
  "type": "module",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/EgizianoEG/LAPD-Central-Bot"
  },
  "keywords": [
    "Roblox",
    "ER:LC",
    "LAPD",
    "Dispatch"
  ],
  "scripts": {
    "watch": "npm run watch:dev",
    "watch:dev": "tsx watch --clear-screen=false --ignore ./Build/**/* --ignore ./Source/Typings/**/* --env-file=.env .",
    "start:js": "node ./Build/Main.js",
    "start:ts": "tsx --env-file=.env .",
    "start": "npm run start:ts",
    "build": "tsc && tsconfig-replace-paths --project tsconfig.json && cp -r ./Source/Resources/Imgs ./Build/Resources && cp -r ./Source/Resources/Fonts ./Build/Resources",
    "clean-build": "rm -rf Build & npm run build",
    "lint": "tsc --noEmit && eslint \"Source/**/*.{js,ts}\" && prettier -c --end-of-line auto \"Source/**/*.{js,ts,json}\"",
    "cp:secrets": "cp ./Source/Config/Secrets.example.ts ./Source/Config/Secrets.ts",
    "test:coverage": "jest \"--coverage\"",
    "test:secrets": "npm run test -- Tests/Other/Secrets.test.ts",
    "test:utils": "npm run test -- Tests/Utils/*",
    "test:rscs": "npm run test -- Tests/Other/Resources.test.ts",
    "test": "jest"
  },
  "dependencies": {
    "@logtail/node": "^0.4.19",
    "@logtail/winston": "^0.4.19",
    "@napi-rs/canvas": "^0.1.45",
    "axios": "^1.6.7",
    "chalk": "^5.3.0",
    "chrono-node": "^2.7.5",
    "convert-units": "^2.3.4",
    "date-fns": "^3.3.1",
    "dedent": "^1.5.1",
    "discord.js": "^14.14.1",
    "express": "^4.18.2",
    "humanize-duration": "^3.31.0",
    "mongoose": "^8.1.1",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.3",
    "node-os-utils": "^1.3.7",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.0",
    "@types/convert-units": "^2.3.9",
    "@types/express": "^4.17.21",
    "@types/humanize-duration": "^3.27.4",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.16",
    "@types/node-cron": "^3.0.11",
    "@types/node-os-utils": "^1.3.4",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-sonarjs": "^0.21.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsconfig-replace-paths": "^0.0.14",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "utility-types": "^3.11.0"
  },
  "engines": {
    "node": "^21.0.0",
    "npm": "^10.2.0"
  }
}
